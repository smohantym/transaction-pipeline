# -------- Kafka ----------
KAFKA_TOPIC=transactions
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Dev retention (small disks); tweak or remove in prod
KAFKA_LOG_RETENTION_HOURS=4
KAFKA_LOG_RETENTION_BYTES=268435456

# -------- Producer ----------
MSGS_PER_SEC=10

# -------- Spark ----------
OUTPUT_PATH=/opt/spark-output/parquet
SPARK_SQL_SHUFFLE_PARTITIONS=4
STARTING_OFFSETS=latest
FAIL_ON_DATA_LOSS=false
SHOW_PREVIEWS=0

# Micro-batch cadence & file controls
TRIGGER_INTERVAL=30 seconds
MAX_FILES_PER_SINK=48

# Intake throttle per micro-batch
MAX_OFFSETS_PER_TRIGGER=5000

# Durable checkpoints (donâ€™t delete unless you want a reset)
SPARK_CHECKPOINT_DIR=/opt/spark-output/parquet/_chk

# Compose label
COMPOSE_PROJECT_NAME=spark_kafka_pipeline
